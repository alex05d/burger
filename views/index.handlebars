<h1>Burgers!!</h1>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block devoured=true}}
    {{/unless}}
    {{/each}}
</ul>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block devoured=false}}
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger!!</h2>
<form class="create-form">

    <div class="form-group">
        <lable for="burger">Add a Burger:</lable>
        <input type="text" id="burger" name="name">
    </div>

    <button type="submit">Add a Burger!</button>
</form>