<h1>Burgers!!</h1>

<div class="forms">
    <form class="create-form">

        <div class="form-group">
            <input type="text" id="burger" name="name" placeholder=" Add a Burger!">
        </div>

        <button type="submit">Add Now!</button>
    </form>
</div>

<ul id="new_burgers">
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block devoured=true}}
    {{/unless}}
    {{/each}}
</ul>


<ul id="devoured">
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block devoured=false}}
    {{/if}}
    {{/each}}
</ul>